{% extends "turtlemail/base.jinja" %}
{% block body %}
    <div class="h-screen bg-base-200 flex items-center align-center">
        <div class="w-full md:w-1/3 space-y-6 bg-base-100 mx-auto my-auto p-10 rounded-box mx-2">
            <h2 class="text-4xl text-center">{{ _("%(action)s", action=form.action) }}</h2>
            <form method="post">
                {% csrf_token %}
                {% if form.errors %}
                    <div class="mb-6">
                        {{ form.non_field_errors() }}
                        {% for field in form %}
                            {% for error in field.errors %}
                                <div class="alert alert-error my-1">
                                    <span>{{ error }}</span>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                {% endif %}
                <div class="flex flex-col space-y-4">
                    {% for field in form %}<label class="flex flex-col space-y-1">{{ field.label }}{{ field }}</label>{% endfor %}
                    <button type="submit" class="btn btn-primary">{{ _("%(action)s", action=form.action) }}</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
