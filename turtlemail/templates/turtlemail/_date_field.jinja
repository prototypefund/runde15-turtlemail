<label id="{{ field.id_for_label }}_elem"
       class="form-control {% if hidden %}hidden{% endif %}">
    <div class="label">
        {% if label %}<span class="label-text">{{ field.label }}</span>{% endif %}
    </div>
    <input type="date"
           name="{{ field.html_name }}"
           id="{{ field.id_for_label }}"
           class="input input-bordered {{ "input-error" if field.errors|length > 0 }}"
           {% if field.value() is not none %}value="{{ field.value() }}"{% endif %} />
    {% for error in field.errors %}<p class="text-error">{{ error }}</p>{% endfor %}
</label>
