<label class="form-control {% if hidden %}hidden{% endif %}">
    <div class="label">
        {% if label %}<span class="label-text">{{ field.label }}</span>{% endif %}
    </div>
    <select id="{{ field.id_for_label }}"
            name="{{ field.html_name }}"
            class="select select-bordered {{ "input-error" if field.errors|length > 0 }}">
        {% for value, label in field.field.choices %}
            <option value="{{ value }}"
                {# Convert value to string since the comparison wont work for integer fields otherwise #}
                {% if field.value()==value|string %}selected{% endif %}>{{ label }}</option>
        {% endfor %}
    </select>
    {% for error in field.errors %}<p class="text-error">{{ error }}</p>{% endfor %}
</label>
