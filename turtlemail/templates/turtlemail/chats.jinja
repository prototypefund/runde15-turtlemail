{% extends "turtlemail/layout.jinja" %}
{% block content %}
    <div class="flex justify-center w-full"
        {# djlint:off #}
         style="height: calc(100svh - (32 * 0.25rem))">
        {# djlint:on #}
        <div id="chats"
             class="relative flex items-stretch overflow-hidden rounded-box">
            {% if chat_list %}
                {% include "turtlemail/_chat_list.jinja" %}
                <div id="chat" class="flex flex-col flex-grow max-h-full">
                    <div id="messages" class="h-full">
                        <p class="p-8 font-bold text-center">{{ gettext("Click a chat from the list to agree upon package exchanges.") }}</p>
                    </div>
                </div>
            {% else %}
                <div class="w-full">
                    <p class="font-bold text-center">{{ gettext("You're currently not involved in any deliveries.") }}</p>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
